{
  "manifest_version": 2,
  "name": "Chat13",
  "version": "1.1",
  "author": "lumpenspace",
  "homepage_url": "github.com/lumpenspace/chat13",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "description": "Transforms inputs and, on click, chat messages to rot13 for chatgpt",
  "permissions": [
    "activeTab",
    "storage",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
